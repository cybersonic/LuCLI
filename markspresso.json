{
  "name": "LuCLI",
  "build": {
    "prettyUrls": true,
    "defaultLayout": "page",
    "includeDrafts": false
  },
  "collections": {
    "posts": {
      "permalink": "/posts/:slug/",
      "path": "posts",
      "layout": "post",
      "feed": {
        "enabled": true,
        "formats": ["rss", "atom"],
        "limit": 20,
        "title": "LuCLI Blog",
        "description": "Latest posts about the development of LuCLI"
      }
    }
  },
  "navigation": {
    "rootPath": "docs",
    "pagination": true
  },
  "search": {
    "lunr": {
      "enabled": true
    }
  },
  "baseUrl": "http://localhost:8080",
  "paths": {
    "content": "content",
    "output": "public",
    "layouts": "content/layouts",
    "assets": "content/assets"
  }
}